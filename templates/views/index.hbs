<!DOCTYPE html>
<html lang="en">
<head>
   {{>heading}}
</head>
<body>
    <!-- navbar section -->
    {{>navbar}}
    <!-- page section -->
    <div class="container-fluid page-section">
        <div class="row">
          <div class="col-md-10 col-12 mx-auto">
              <div class="row">
                   <!-- left side -->
                  <div class="col-md-6 col-12 mx-auto left-section">
                      <h3>welcome to current weather</h3>
                      <h1 class="my-2">Get The Latest <span>Weather</span> Data Of Any Location</h1>
                      <a href="/weather"><button class="btn btn-outline-primary mt-3">check now</button></a>
                  </div>
                  <!-- right side -->
                 <div class="col-md-6 col-12 mx-auto right-section">
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                          <div class="carousel-item active">
                            <img src="images/bg1 (1).png" class="w-100" alt="...">
                          </div>
                          <div class="carousel-item">
                            <img src="images/bg1 (2).png" class="w-100" alt="...">
                          </div>
                          <div class="carousel-item">
                            <img src="images/bg1 (3).png" class="w-100" alt="...">
                          </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                          <span class="visually-hidden">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                          <span class="carousel-control-next-icon" aria-hidden="true"></span>
                          <span class="visually-hidden">Next</span>
                        </a>
                      </div>
                 </div>
              </div>
          </div>  
        </div>
    </div>
    <!-- footer section -->
    {{>footer}}
</body>
</html>